<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymControlAPP.Views.Perfil"
             Title="Perfil"
             BackgroundImageSource="bg"
             >
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Muscle Designer Gym" FontSize="30" TextColor="Yellow" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="StartAndExpand" />

        <StackLayout Orientation="Vertical" Spacing="10">
            
            <Button x:Name="BtnLogin"
        Text="Cerrar Sesion"
        FontSize="20"
        Clicked="BtnLogin_Clicked"
        BackgroundColor="RoyalBlue"
        TextColor="White"
        FontAttributes="Bold"
        CornerRadius="10"
        HeightRequest="60"
        Margin="90,80,90,10"/>
            
            <Button x:Name="BtnUsuario"
                    Text="Usuario"
                    FontSize="20"
                    Clicked="BtnUsuario_Clicked"
                    BackgroundColor="#228B22"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="20,20,200,50"/>

            

          
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>