<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymControlAPP.Views.LoginPage"
             Title="Ingresa"
             BackgroundImageSource="bg">

    <VerticalStackLayout>
        
        
               
        <Entry x:Name="TxtUserName" Margin="20,20,30,8" Placeholder="Username/Email" Keyboard="Email" FontSize="25" />
        <Entry x:Name="TxtPassword" Margin="20,20,30,8"  Placeholder="Password" Keyboard="Text" FontSize="25" IsPassword="True" />
        <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />

        <Button x:Name="BtnLogin" Text="LOGIN"  BackgroundColor="Green" Margin="20,10,20, 20" Clicked="BtnLogin_Clicked"  />
        <Button x:Name="BtnSignUp" Text="Sign Up" Margin="50,10,50,20" Clicked="BtnSignUp_Clicked" />
        
    </VerticalStackLayout>
</ContentPage>